<div class="box" id="{{id}}" style="display: none;">
  <div style="float: right">
    <button class="link" onclick="$('.class-breakdown').toggle();">Detail</button>
    <button class="link" onclick="$('#{{id}}').hide();">X</button>
  </div>
  <div class="info-heading">
    <h2>{{[!]}}</h2>
    <h1>
      <span class="fade">{{namespace}}</span>::{{name}}
      <span class="fade"></span>
    </h1>
    <h3></h3>
  </div>
  <div class="class-breakdown" style="float:left;">
    {{> detail}}
  </div>
  <div class="info-content">
    <p>{{render_comment}}</p>
  </div>
  <br style="clear: both;" />
</div>

